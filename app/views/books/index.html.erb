<h1>Books</h1>
<table>
	
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

 <% @books.each do |book| %> 
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "show", book_path(book.id) %></td>
   <td><%= link_to "edit", edit_book_path(book.id) %></td>
   <td><%= link_to "destroy", book_path(book.id),  method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
 <% end %>
</table>


    	


<h1>New Book</h1>
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', book:@book %>
 
  <div class="form-group"> 
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
 
  <div class="form-group">
    <h4>Body</h4>
    <%= f.text_area :body %>
  <div>

    <%= f.submit 'Create Book' %>
 
<% end %>